# Cloud Builder pipeline
# https://cloud.google.com/container-builder/docs/overview

steps:
- name: gcr.io/cloud-builders/docker
  args: ['build', '--tag=${IMAGE}', '--build-arg', 'BASE_TAG=${BASE_TAG}', '--build-arg', 'BASE_NAMESPACE=${BASE_NAMESPACE}', '--no-cache=true', '.']
  id: BUILD

images: ['${IMAGE}']
